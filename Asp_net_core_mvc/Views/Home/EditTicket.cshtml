@model Asp_net_core_mvc.Models.Ticket

<h2>Редагувати інформацію про білет</h2>
<form asp-action="EditTicket" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Zoo">Zoo</label><br />
        <select asp-for="Zoo_ID" asp-items="ViewBag.ZooIds" class="form-control">
        <option value="">Оберіть айді зоопарку</option>
    </select>
    </p>
    <p>
        <label asp-for="Cost">Cost</label><br />
        <input type="decimal" asp-for="Cost" />
    </p>
    <p>
        <label asp-for="Date">Date</label><br />
        <input type="DateTime" asp-for="Date" />
    </p>
    <p>
        <input type="submit" value="Зберегти" />
    </p>
</form>